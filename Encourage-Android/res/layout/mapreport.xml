<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/mapReportDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" 
            android:onClick="mapDatePressed"
            android:background="@drawable/rounded_corner_text">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/mapReportNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:background="@drawable/rounded_corner_text"
            />

        <EditText
            android:id="@+id/mapReportAddressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:background="@drawable/rounded_corner_text"
            />

        <EditText
            android:id="@+id/mapReportDescText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:background="@drawable/rounded_corner_text"
            />

    </LinearLayout>

</RelativeLayout>
